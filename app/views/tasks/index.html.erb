<p style="color: green"><%= notice %></p>

<h1>タスク一覧</h1>

<h1>タスク検索</h1>
<%= search_form_for @q, url: search_tasks_path do |f| %>
  <%= f.label :display_text_cont, 'タスク名' %>
  <%= f.search_field :display_text %>
  <br>
  <%= f.submit '検索' %>
<% end %>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <%= link_to "Show this task", "/tasks/#{task.id}" %>
  <% end %>
</div>

